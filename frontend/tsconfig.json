{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "outDir": "../static",
    "useDefineForClassFields": false,
    "rootDir": "./",
    "declaration": false,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*.ts"
  ]
}
